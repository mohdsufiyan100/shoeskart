<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body>
<header>
    <%- include('../partials/header'); %>
    <%- include('../partials/banner'); %>

</header>


<div class="products">
    <div class="products_filter">
        <div class="ourprd">
            <h1>Our Product</h1>
        </div>
        <div class="filter">
            <button class="feature"> Feature</button>
            <button> Latest</button>
            <button> Bestseller</button>
        </div>
    </div>
    
    <div id="productcontainer">
        <% productdata.forEach(element => { %>
            
            <div class="productcard">
                <img src="/uploads/images/<%= element.file %>" class="productimg">
                <div class="productcarddis">
                    <p class="disscribe">  <b><%= element.name %></b> </p>
                    <p class="price">Price: <%= element.price %></p>
                    <p class="price">Size: <%= element.size%></p>
                    <a href="/shoeskart/addtocart/<%= element._id %> " type="button" class="addtocartdisplay">Add to cart</a>
                </div>
            </div>
        <% }) %> 
        
    </div>
</div>



    

<footer>

    <%- include('../partials/footer'); %>
</footer>
</body>
</html>