<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
  <link rel="stylesheet" href="../../assets/css/profile.css">
  <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> -->
</head>

<body>
  <header>
    <%- include('../partials/header'); %>

  </header>
  <div class="container">
    <div class="tab">
      <button class="tablinks" onclick="clickHandle(event, 'passwordchange')">Change password</button>
      <!-- <button class="tablinks" onclick="clickHandle(event, 'updateinfo')">Update info</button> -->
      <button class="tablinks" onclick="clickHandle(event, 'add_address')">Your Address</button>
    </div>

    <div>
      <div id="userinformation" class="styling containerdata">

        <div class="tabdata">
          <label for="userfname">First name</label>
          <input class="inputvalue" id="userfname" type="text" value="<%= profile.Fname %>" disabled>
        </div>

        <div class="tabdata">
          <label for="userlname">Last name</label>
          <input class="inputvalue" id="userlname" type="text" value="<%= profile.Lname %>" disabled>
        </div>

        <div class="tabdata">
          <label for="useremail">Email</label>
          <input class="inputvalue" id="useremail" type="text" value="<%= profile.email %>" disabled>
        </div>

        <div class="tabdata">
          <label for="userphone">Phone</label>
          <input class="inputvalue" id="userphone" type="text" value="<%= profile.phone %>" disabled>
        </div>
        <div class="tabtn">
          <button id="userinfoedit" class="edituserbtn">Edit user</button>
          <a href="/shoeskart" type="button" class="savebtn">Save</a>
        </div>
      </div>

      <div id="userform" class="formsuser2">
        <form action="/shoeskart/edituserinfo/<%= profile._id %>?_method=PUT" method="post">
          <h2>Update user info</h2>
          <div class="addressname1">
            <label class="forlable" id="forname">First name</label>
            <input type="text" class="forname" id="forname" name="yourfname" value="<%= profile.Fname %>">
          </div>
          <div class="addressname1">
            <label class="forlable" id="forname">Last name</label>
            <input type="text" class="forname" id="forname" name="yourlname" value="<%= profile.Lname %>">
          </div>
          <div class="addressname1">
            <label class="forlable" id="forname">Email</label>
            <input type="email" class="forname" id="forname" name="youremail" value="<%= profile.email %>">
          </div>
          <div class="addressname1">
            <label class="forlable" id="forname">Phone no.</label>
            <input type="number" class="forname" id="forname" name="yourphone" value="<%= profile.phone %>">
          </div>
          <button class="addressbtn">Save Changes</button>
          <a href="/shoeskart/profile" type="button" class="savebtn">Save</a>

        </form>
      </div>

    </div>

    <div id="passwordchange" class="tabcontent">

      <div class="passwordcurrent" id="passwordarea">
        <div class="tabdata">
          <label for="userfname">Password</label>
          <input class="inputvalue" id="userfname" type="password" value="12345678988392889" disabled>
        </div>
        <button class="addressbtn" id="forpassword">Change</button>

      </div>

      <div class="formsuser2" id="forpasswordupdate">
        <form action="/shoeskart/passwordchange/<%= profile._id %>?_method=PUT" method="post">
          <h2>Change password</h2>
          <div class="addressname1">
            <label class="forlable" id="forname">Current password</label>
            <input type="password" class="forname" id="forname" name="currentpassword" >
          </div>
          <div class="addressname1">
            <label class="forlable" id="forname">New password</label>
            <input type="text" class="forname" id="forname" name="yourpassword" >
          </div>
          <button class="addressbtn">Change</button>
          <a href="/shoeskart/profile" type="button" class="savebtn">Cancel</a>

        </form>
      </div>

    </div>

    <div id="add_address" class="tabcontent">
      <div class="containerdata" id="addresscontainer">
        <h1>Your Address
          <hr>
        </h1>
        <address>
          <h3>
            <%= profile.address[0].nameaddress %>
          </h3><br>
          <p>Pincode:<%= profile.address[0].pincodeaddress %>
          </p><br>
          <p>
            <%= profile.address[0].areaaddress %>, <%= profile.address[0].cityaddress %> <br>
                <%= profile.address[0].stateaddress %>.
                  <br>Mobile No.: <%= profile.address[0].phoneaddress %>
          </p>
        </address>
        <button id="editbtn" class="addressbtn">Edit</button>
      </div>
      <div id="addressformedit" class="formsuser2">
            
          <form action="/shoeskart/editdata/<%= profile._id %>?_method=PUT" method="post">
          <h3>Update Your Address</h3>
          <div class="formcontent">
            <div class="addressname1">
              <label for="forname" class="forlable">Your name</label>
              <input type="text" class="forname" id="forname" name="addressname"
                value="<%= profile.address[0].nameaddress %> ">
            </div>
  
            <div class="addressname1">
              <label for="forname" class="forlable">Mobile</label>
              <input type="text" class="forname" id="forname" name="addressphone"
                value="<%= profile.address[0].phoneaddress %> ">
            </div>
  
            <div class="addressname1">
              <label for="forname" class="forlable">Your Email</label>
              <input type="email" class="forname" id="forname" name="addressemail"
                value="<%= profile.address[0].emailaddress %> ">
            </div>
            <div class="addressname1">
              <label for="forname" class="forlable">Area, Street, Village</label>
              <input type="text" class="forname" id="forname" name="addressarea"
                value="<%= profile.address[0].areaaddress %> ">
            </div>
  
            <div class="addressname1">
              <label for="forname" class="forlable">Pin code</label>
              <input type="text" class="forname" id="forname" name="addresspincode"
                value="<%= profile.address[0].pincodeaddress %> ">
            </div>
  
            <div class="addressname1">
              <label for="forname" class="forlable">Your City</label>
              <input type="text" class="forname" id="forname" name="addresscity"
                value="<%= profile.address[0].cityaddress %> ">
            </div>
  
            <div class="addressname1">
              <label for="forname" class="forlable">Your State</label>
              <input type="text" class="forname" id="forname" name="addressstate"
                value="<%= profile.address[0].stateaddress %> ">
            </div>
          </div>
          <button type="submit" class="addressbtn">Save Changes</button>
          <a href="/shoeskart/profile" class="savebtn">Cancel</a>
        </div>
      </form>
    </div>

  </div>
  </div>
  </div>





  <script>
    function clickHandle(evt, newtab) {
      let i, tabcontent, tablinks;
      let userinformation = document.getElementById('userinformation');


      // This is to clear the previous clicked content.
      tabcontent = document.getElementsByClassName("tabcontent");

      for (i = 0; i < tabcontent.length; i++) {
        tabcontent[i].style.display = "none";
      }

      // Set the tab to be "active".
      tablinks = document.getElementsByClassName("tablinks");
      for (i = 0; i < tablinks.length; i++) {
        userinformation.style.display = "none"
        tablinks[i].className = tablinks[i].className.replace(" active", "");
      }

      // Display the clicked tab and set it to active.
      document.getElementById(newtab).style.display = "block";
      evt.currentTarget.className += " active";
    }



    // for userinfo form 
    let userform = document.getElementById('userform');
    let userinformation = document.getElementById('userinformation');
    let btn = document.getElementById('userinfoedit');

    userform.style.display = "none";

    btn.addEventListener('click', () => {

      userinformation.style.display = "none";
      userform.style.display = "block";

    })
    // for address form 
    let addressform = document.getElementById('addressformedit');
    let addressformdata = document.getElementById('addresscontainer');
    let editaddress = document.getElementById('editbtn');

    addressform.style.display = "none";

    editaddress.addEventListener('click', () => {
      addressform.style.display = "block";
      addressformdata.style.display = "none";

    })
    
    // for password form 
    let passwordbtn = document.getElementById('forpassword');
    let passwordform = document.getElementById('forpasswordupdate');
    let passwordarea = document.getElementById('passwordarea');

    passwordform.style.display = "none";

    passwordbtn.addEventListener('click', () => {
      passwordform.style.display = "block";
      passwordarea.style.display = "none";

    })
  </script>


  <footer>

    <%- include('../partials/footer'); %>
  </footer>
</body>

</html>