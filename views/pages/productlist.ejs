<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
<header>
    <%- include('../partials/header'); %>
</header>


<div class="addproductform">
    <div class="addproductlist">
        <% if(success != "") { %>
            <div class="alert alert-success" role="alert">
               <strong>Success</strong> <%= success %> 
            </div>
        <% } %>  
        <h1>Add product</h1>
        <form action="/shoeskart/productlist" method="post" enctype="multipart/form-data">
            <div class="productName prodetail">
                <label for="name">Product Name </label>
                <input type="text" name="productname" required="" placeholder="Product Name" id="name">
            </div>
            <div class="productprice prodetail">
                <label for="price">Product Price </label>
                
                <input type="number" name="productprice" required="" placeholder="Price" id="price">
            </div>
            <div class="productquentity prodetail">
                <label for="quentity">Product Quentity </label>
                
                <input type="number" name="productquentity" required="" placeholder="Quentity" id="quentity" value="1">
            </div>
            <div class="productcompany prodetail">
                <label for="company">Product Company </label>
                
                <input type="text" name="productcompany" required="" placeholder="Company" id="company">
            </div>
            <div class="productsize prodetail">
                <label for="size">Product Size</label>
                <select name="productsize" id="size">
                    <option value="N/A">Select size</option>
                    <option value="5 NO">5 no.</option>
                    <option value="7 NO">7 no.</option>
                    <option value="3 NO">3 no.</option>
                    <option value="8 NO">8 no.</option>
                </select>
                
                <!-- <input type="text" name="productsize" required="" placeholder="Shoes Size" id="size"> -->
            </div>
            <div class="productdiscription prodetail">
                <textarea name="productdiscription"  placeholder="Product Discription" id="discription"></textarea>
            </div>
            <div class="productimage prodetail">
                <input type="file" name="productimage" required="" id="file">
            </div>
            <div class="addproductbtn">
                <button>Add</button>
                <a href="/shoeskart" type="button" class="forcancel">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

<footer>

    <%- include('../partials/footer'); %>
</footer>
    
</body>
</html>